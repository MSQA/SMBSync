<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage" >

    <TextView
        android:id="@+id/maint_last_mod_list_dlg_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/msgs_local_file_modified_maint_title"
        android:textSize="30dp" />

    <include layout="@layout/divider_line1_turquoise" />

    <TextView
        android:id="@+id/maint_last_mod_list_dlg_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffff0000" />

    <ListView
        android:id="@+id/maint_last_mod_list_dlg_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/maint_last_mod_list_dlg_delete_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/msgs_local_file_modified_maint_delete_btn"
            android:textSize="25dp" />

        <Button
            android:id="@+id/maint_last_mod_list_dlg_init_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/msgs_local_file_modified_maint_init_btn"
            android:textSize="25dp" />

        <Button
            android:id="@+id/maint_last_mod_list_dlg_reset_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="@string/msgs_local_file_modified_maint_reset_btn"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/maint_last_mod_list_dlg_cleanup_btn"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/msgs_local_file_modified_maint_cleanup_btn"
        android:textSize="25dp" />

    <Button
        android:id="@+id/maint_last_mod_list_dlg_close_btn"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="@string/msgs_local_file_modified_maint_close_btn"
        android:textSize="25dp" />

</LinearLayout>