<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ButtonStyle" >

    <Button
        android:id="@+id/password_input_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/msgs_export_import_pswd_btn_cancel" />

    <Button
        android:id="@+id/password_input_noencrypt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/msgs_export_import_pswd_btn_noencrypt" />
    
    <Button
        android:id="@+id/password_input_encrypt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/msgs_export_import_pswd_btn_encrypt_export" />

</LinearLayout>