<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_list_item_entry"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/filter_list_item_del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:focusable="false"
		android:focusableInTouchMode="false"
		android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgs_filter_list_dlg_delete" />
    <TextView
        android:id="@+id/filter_list_item_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <RadioGroup
        android:id="@+id/filter_list_item_rbgrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/filter_list_item_rb_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text="@string/msgs_filter_list_dlg_include" />
        <RadioButton
            android:id="@+id/filter_list_item_rb_exc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text="@string/msgs_filter_list_dlg_exclude" />
    </RadioGroup>
</LinearLayout>