<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="SpUsage" >

    <TextView
        android:id="@+id/remote_profile_dlg_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <include layout="@layout/divider_line1_turquoise" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/remote_profile_dlg_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffff0000" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/remote_profile_active"
                    style="@style/check_box_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/msgs_remote_profile_dlg_active" />

                <EditText
                    android:id="@+id/remote_profile_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.0"
                    android:hint="@string/msgs_remote_profile_dlg_profile"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
            
            <CheckBox
                android:id="@+id/remote_profile_use_computer_name"
                style="@style/check_box_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/msgs_remote_profile_dlg_use_computer_name" />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/remote_profile_get_addr_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/msgs_remote_profile_dlg_addr_list"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/remote_profile_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:digits="0123456789.:"
                    android:hint="@string/msgs_remote_profile_dlg_address"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/remote_profile_hostname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/msgs_remote_profile_dlg_hostname"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/remote_profile_use_user_pass"
                style="@style/check_box_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/msgs_remote_profile_dlg_use_user_pass" />
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall" >

                <EditText
                    android:id="@+id/remote_profile_user"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:hint="@string/msgs_remote_profile_dlg_username"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/remote_profile_pass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/msgs_remote_profile_dlg_password"
                    android:inputType="textPassword"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall" >

                <Button
                    android:id="@+id/remote_profile_get_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/msgs_remote_profile_dlg_sharelist" />

                <EditText
                    android:id="@+id/remote_profile_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/msgs_remote_profile_dlg_share"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall" >

                <Button
                    android:id="@+id/remote_profile_get_btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/msgs_remote_profile_dlg_dirlist" />

                <EditText
                    android:id="@+id/remote_profile_dir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="@string/msgs_remote_profile_dlg_directory"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/edit_profile_remote_ok_cancel"/>

</LinearLayout>